<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.ninthapp.MainActivity">

    <TextView
        android:id="@+id/headText_AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="@string/headText_AM"
        android:textSize="@dimen/head_txt_size" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilay_in1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headText_AM">

        <EditText
            android:id="@+id/et_Login_AM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/headLogin_AM"
            android:textSize="@dimen/txtSizeAll" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilay_in2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tilay_in1">

        <EditText
            android:id="@+id/et_Password_AM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent"
            android:hint="@string/headPass_AM"
            android:inputType="textPassword"
            android:textSize="@dimen/txtSizeAll" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_register_AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tilay_in2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:paddingBottom="@dimen/indent"
        android:text="@string/Register"
        android:textColor="@color/colorTextLBlue"
        android:textSize="@dimen/txtSizeAll"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btn_login_AM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_register_AM"
        android:clickable="true"
        android:text="@string/Login"
        android:textSize="@dimen/txtSizeAll" />

</RelativeLayout>
